<div class="allEventsHeader">
  <h1>All coming events!</h1>
  <a id="createEventBtn" href="/events/create">Create a NEW event!</a>
</div>

{{#each events}}
  <a href="/events/{{_id}}">
    <div class="eventDiv">
      <img src="{{this.image}}" class="eventImg">
      <div class="eventDetail">
        <h2>{{this.title}}</h2><br>
        <p><b>Host : </b>{{this.host_id.name}}</p>
        <p><b>Date : </b>{{this.date}}</p>
        <p><b>Time : </b>{{this.time}}</p>
        <p><b>Address : </b>{{this.address}}</p>
        <p><b>Price : </b>{{this.price}}</p>
        <p class="descriptionView"><b>Detail : </b>{{this.description}}</p>
      </div>
    </div>
  </a>
{{/each}}