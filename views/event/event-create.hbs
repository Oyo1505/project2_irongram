<form action="/events/create" method="post" class="event-create" enctype="multipart/form-data">
  <h2 class="form-title">Create a new event!</h2>

  <label for="title">Title : </label>
  <input type="text" id="title" name="title" placeholder="Event name here" />

  <label for="date">Date : </label>
  <input type="date" id="date" name="date" required />

  <label for="time">Time : </label>
  <input type="time" id="time" name="time" required />

  <label for="address">Address : </label>
  <input type="text" id="address" name="address" placeholder="Deskopolitan Voltaire" />
 
  <label for="price">Price : </label>
  <input type="text" id="price" name="price" placeholder="Free"  />

  <label for="description">Description : </label>
  <input type="text" id="description" name="description" />

  <label for="image">Image : </label>
  <input type="file" id="image" name="image" />

  <button>Create!</button>
</form>