<div class="box">
  <h2 class="form-title">Create an Ironevent</h2>

  <div class="inputForm">
    <form
      action="/events/create"
      method="post"
      class="event-create"
      enctype="multipart/form-data"
    >
      <div class="content-input">

        <label for="title">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          placeholder="Event name here"
        />
      </div>

      <input type="hidden" id="host" name="host_id" value="{{user_id}}" />

      <div class="content-input">

        <label for="date">Date</label>
        <input classe="date" type="date" id="date" name="date" required />
      </div>

      <div class="content-input">

        <label for="time">Time</label>
        <input type="time" id="time" name="time" required />
      </div>

      <div class="content-input">

        <label for="address">Address</label>
        <input
          type="text"
          id="address"
          name="address"
          placeholder="Deskopolitan Voltaire"
          size="50"
        />
      </div>

      <div class="content-input">

        <label for="price">Price</label>
        <input type="text" id="price" name="price" placeholder="Free" />
      </div>

      <div class="content-input">

        <label for="description">Description</label>
        <input
          type="text"
          id="description"
          class="description"
          name="description"
        />
      </div>

      <div class="content-input">

        <label for="image">Image</label>
        <input type="file" id="image" name="image" />
      </div>

      <button>Create</button>
    </form>
  </div>
</div>

<div class="blur-body"></div>