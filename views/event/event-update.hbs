<h2 class="form-title">Update current event details!</h2>

<div class="inputForm">
  <form action="/events/update/{{eventToUpdate._id}}" method="post" class="event-update" enctype="multipart/form-data">

    <label for="title">Title : </label>
    <input type="text" id="title" name="title" value="{{eventToUpdate.title}}" />

    <label for="date">Date : </label>
    <input type="date" id="date" name="date" required value="{{newDate}}" />

    <label for="time">Time : </label>
    <input type="time" id="time" name="time" required value="{{eventToUpdate.time}}" />

    <label for="address">Address : </label>
    <input type="text" id="address" name="address" placeholder="Deskopolitan Voltaire" size="50" value="{{eventToUpdate.address}}" />
  
    <label for="price">Price : </label>
    <input type="text" id="price" name="price" placeholder="Free" value="{{eventToUpdate.price}}" />

    <label for="description">Description : </label>
    <input type="text" id="description" name="description" class="description" value="{{eventToUpdate.description}}" />

    <label for="image">Image : </label>
    <input type="file" id="image" name="image" />
    <input type="file" id="image" name="existingImage" hidden value="{{eventToUpdate.image}}">

    <button>UPDATE !</button>
  </form>
</div>