<form action="/events/update/{{eventToUptate._id}}" method="post" class="event-update" enctype="multipart/form-data">
  <h2 class="form-title">Update current event details!</h2>

  <label for="title">Title : </label>
  <input type="text" id="title" name="title" value="{{eventToUptate.title}}" />

  <label for="date">Date : </label>
  <input type="date" id="date" name="date" required value="{{eventToUptate.date}}" />

  <label for="time">Time : </label>
  <input type="time" id="time" name="time" required value="{{eventToUptate.time}}" />

  <label for="address">Address : </label>
  <input type="text" id="address" name="address" placeholder="Deskopolitan Voltaire" value="{{eventToUptate.address}}" />
 
  <label for="price">Price : </label>
  <input type="text" id="price" name="price" placeholder="Free" value="{{eventToUptate.price}}" />

  <label for="description">Description : </label>
  <input type="text" id="description" name="description" value="{{eventToUptate.description}}" />

  <label for="image">Image : </label>
  <input type="file" id="image" name="image" />
  <input type="text" id="image" name="existingImage" hidden value="{{eventToUpdate.image}}">

  <button>Update!</button>
</form>