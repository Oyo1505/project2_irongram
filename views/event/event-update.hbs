<div class="box">
  <h2 class="form-title">Update this event</h2>
  <div class="inputForm">
    <form
      action="/events/update/{{eventToUpdate._id}}"
      method="post"
      class="event-update"
      enctype="multipart/form-data"
    >
      <div class="content-input">
        <label for="title">Title : </label>
        <input
          type="text"
          id="title"
          name="title" value="{{eventToUpdate.title}}" />
      </div>
      <div class="content-input">
        <label for="date">Date : </label>
        <input classe="date" type="date" id="date" name="date" required value="{{newDate}}" />
      </div>
      <div class="content-input">
        <label for="time">Time : </label>
        <input type="time" id="time" name="time" required value="{{eventToUpdate.time}}" />
      </div>
      <div class="content-input">
        <label for="address">Address : </label>
        <input
          type="text"
          id="address"
          name="address"value="{{eventToUpdate.address}}" />
        </div>
      <div class="content-input">
        <label for="price">Price : </label>
        <input type="text" id="price" name="price"  value="{{eventToUpdate.price}}" />
      </div>

      <div class="content-input">
        <label for="description">Description : </label>
        <input
          type="text"
          id="description"
          class="description"
          name="description" value="{{eventToUpdate.description}}" />
      </div>

      <div class="content-input">
        <label for="image">Image : </label>
        <input type="file" id="image" name="image"  />
      <input type="file" id="image" name="existingImage" hidden value="{{eventToUpdate.image}}">
      </div>
    <button>UPDATE !</button>
  </form>
  </div>
</div>
<div class="blur-body"></div>