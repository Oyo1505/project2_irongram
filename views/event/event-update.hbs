<h2 class="form-title">Update current event details!</h2>

<div class="inputPage">
  <div class="inputForm">
    <form action="/events/update/{{eventToUptate._id}}" method="post" class="event-update" enctype="multipart/form-data">

      <label for="title">Title : </label>
      <input type="text" id="title" name="title" value="{{eventToUptate.title}}" />

      <label for="dateToUpdate">Date : </label>
      <input type="date" id="dateToUpdate" name="dateToUpdate" required value="{{eventToUptate.date}}" />

    {{eventToUptate.date}}

      <label for="time">Time : </label>
      <input type="time" id="time" name="time" required value="{{eventToUptate.time}}" />

      <label for="address">Address : </label>
      <input type="text" id="address" name="address" placeholder="Deskopolitan Voltaire" size="50" value="{{eventToUptate.address}}" />
    
      <label for="price">Price : </label>
      <input type="text" id="price" name="price" placeholder="Free" value="{{eventToUptate.price}}" />

      <label for="description">Description : </label>
      <input type="text" id="description" name="description" class="description" value="{{eventToUptate.description}}" />

      <label for="image">Image : </label>
      <input type="file" id="image" name="image" />
      <input type="file" id="image" name="existingImage" hidden value="{{eventToUpdate.image}}">

      <button>Update!</button>
    </form>
  </div>

  <div class="googleMap"><img src="/img/map.jpg"></div>
</div>