<h1>SINGLE</h1>
<img src="{{post.urlMedia}}" class="image-single" alt="post" />

<span class="likes-count">{{post.likes.length}}</span>
<button
  class="btn-like"
  data-id="{{post.user_id}}"
  data-postid="{{post._id}}"
  data-currentuser="{{currentUser._id}}"
>Like</button>

{{#compare post.user_id currentUser._id operator="=="}}
  <a href="/posts/update/{{post._id}}">EDIT TODO</a>
  <button
    id="btn-delete-image"
    data-id="{{post._id}}"
    data-filename="{{post.filename}}"
  >Delete</button>
{{/compare}}
